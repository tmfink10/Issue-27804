                 InputLabel="Select a Color"
                 Items="@Colors"/>
</EditForm>*@

@code{

    readonly Person Form = new Person();

    public string[] Colors = new[]
    
    {
        "red",
        "green",
        "blue"
    };

    public class Person
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string FavoriteColor { get; set; }
        public int Age { get; set; }

    }


}