@page "/"

<EditForm Model="Form">
    <InputText @bind-Value="Form.FirstName"/>
    <InputSelect @bind-Value="Form.FavoriteColor">
        @foreach (var color in Colors)
        {
            <option value="@color">@color</option>
        }
    </InputSelect>
    <InputString></InputString>
</EditForm>

<h2>@Form.FavoriteColor</h2>

